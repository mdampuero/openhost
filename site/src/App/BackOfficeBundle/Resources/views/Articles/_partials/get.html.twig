
<div	class="card">
	<img class="card-img-top img-responsive" src="{{ entity.picture }}"	alt="{{ entity.title }}" />
	<div	class="card-body">
		<h4	class="card-title">
			{{ entity.title }}
		</h4>
		<p	class="card-text">
			{{ entity.description | nl2br }}
		</p>
		<p	class="card-text">
			{{ entity.body | nl2br }}
		</p>
		<p	class="card-text">
			<small	class="text-muted">
				{{ entity.createdAt | date("d/m/Y H:i") }}
			</small>
		</p>
	</div>
</div>
