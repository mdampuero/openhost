<div id="{{ pathBase }}_modalAjax" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">

                </h3>
                <button type="button" class="close cursor-pointer" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>
<script>
    var modalLanding_{{ pathBase }}_modalAjax={
        show: function (title,url){
            beforeShow(title);            
            $('#{{ pathBase }}_modalAjax .modal-body').html(getSpin());
            $('#{{ pathBase }}_modalAjax').modal('show');
            $.ajax({
                url,
                type: 'GET',
                crossDomain: true,
                success: function(data) {
                    $('#{{ pathBase }}_modalAjax .modal-body').html(data);  
                }
            });   
            return true;
        },
        hide: function (){
            $('#{{ pathBase }}_modalAjax').modal('hide');
            return true;
        }
    }


    function beforeShow(title){
        $('#{{ pathBase }}_modalAjax .modal-title').html(title);
    }
    
</script>